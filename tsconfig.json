{
  "compilerOptions": {
    "outDir": "dist",
    "lib": [
      "ES2018",
      "dom"
    ],
    "module": "commonjs",
    "target": "ES2018",
    "alwaysStrict": false,
    "declaration": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "inlineSources": true,
    "noEmitHelpers": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false, // Try and turn back on later
    "noImplicitReturns": true,
    "noImplicitUseStrict": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "strictBindCallApply": false,
  },
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "__tests__/**/*"
  ]
}