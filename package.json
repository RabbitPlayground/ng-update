{
  "name": "ng-update",
  "version": "1.0.0",
  "description": "a Github action that keeps your Angular CLI-based projects up-to-date with @angular via automated pull requests.",
  "main": "lib/main.js",
  "scripts": {
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "build": "tsc",
    "pack": "ncc build",
    "test": "mocha --timeout 300000",
    "posttest": "rimraf demo",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/itzrabbs/ng-update.git"
  },
  "homepage": "https://github.com/itzrabbs/ng-update",
  "bugs": "https://github.com/itzrabbs/ng-update/issues",
  "keywords": [
    "actions",
    "angular",
    "ng",
    "update"
  ],
  "author": "ItzRabbs",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/exec": "^1.0.1",
    "@actions/github": "^1.1.0",
    "@actions/io": "^1.0.1",
    "object-hash": "^2.0.3",
    "simple-git": "^1.132.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/node": "^12.12.5",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.1",
    "typescript": "^3.8.3"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/github"
    ]
  }
}